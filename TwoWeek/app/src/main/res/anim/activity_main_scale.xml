<?xml version="1.0" encoding="utf-8"?>
<scale xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromXScale="1"
    android:fromYScale="1"
    android:toXScale="0.1"
    android:toYScale="0.1"
    android:duration="3000"
    android:pivotX="50%"
    android:pivotY="50%">

    <!--
        缩放动画
            fromXScale  x缩放起始点
            fromYScale  y缩放起始点
            toXScale    x缩放结束点
            toYScale    ys缩放结束点
    -->

</scale>